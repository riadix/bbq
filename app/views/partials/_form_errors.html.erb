<% if model.errors.any? %>
  <div id="error_explanation">
    <div class="col-md-6">
      <% model.errors.each do |error| %>
        <div class="alert alert-danger alert-dismissible">
          <%= error.full_message %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

