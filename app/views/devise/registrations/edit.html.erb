<h2><%= I18n.t('actions.account.edit') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>
  </div>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :password %> <i>(оставить пустым, если не хотите менять)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: I18n.t('activerecord.attributes.user.password') %>
    </div>
  </div>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: I18n.t('actions.account.password.confirm') %>
    </div>
  </div>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: I18n.t('actions.account.password.old') %>
    </div>
  </div>

  <div class="actions row my-3">
    <div class="col-md-3">
      <%= f.submit I18n.t('buttons.save'), data: {turbo: false}, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<h3>Удалить аккаунт</h3>

<p>Не подходит? <%= button_to "Удалить аккаунт", registration_path(resource_name),
                          data: { turbo_method: :delete, turbo_confirm: I18n.t('const.confirm') },
                          method: :delete,
                          class: "btn btn-danger"%></p>

<%= link_to I18n.t('buttons.go_back'), :back %>
