<h2><%= I18n.t('actions.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Введите имя" %>
    </div>
  </div>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Введите email" %>
    </div>
  </div>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Пароль" %>
    </div>
  </div>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Подтверждение пароля" %>
    </div>
  </div>

  <div class="actions row my-3">
    <div class="col-md-3">
      <%= f.submit I18n.t('actions.sign_up'), data: {turbo: false}, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
