<h2>Забыли пароль?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group row my-3">
    <div class="col-md-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: I18n.t('activerecord.attributes.user.email') %>
    </div>
  </div>

  <div class="actions row my-3">
    <div class="col-md-3">
      <%= f.submit "Отправить инструкцию, для восстановления", data: {turbo: false}, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
