<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'devise/shared/error_messages', locals: {resource: subscription} %>

  <% unless user_signed_in? %>
    <div class="form-group">
      <%= f.label :user_name %>
      <%= f.text_field :user_name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :user_email %>
      <%= f.text_field :user_email, class: 'form-control' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit 'Подписаться', data: {turbo: false}, class: 'btn btn-primary' %>
  </div>
<% end %>
